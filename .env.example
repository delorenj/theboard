# Database Configuration
POSTGRES_USER=theboard
POSTGRES_PASSWORD=theboard_dev_pass
POSTGRES_DB=theboard
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg://theboard:theboard_dev_pass@localhost:5432/theboard

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=theboard_redis_pass
REDIS_DB=0
REDIS_URL=redis://:theboard_redis_pass@localhost:6379/0

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_URL=http://localhost:6333

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=theboard
RABBITMQ_PASSWORD=theboard_rabbit_pass
RABBITMQ_URL=amqp://theboard:theboard_rabbit_pass@localhost:5672/

# LLM Provider Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# Agent Configuration
MAX_ROUNDS=5
DEFAULT_STRATEGY=sequential
DEFAULT_AGENT_COUNT=5
CONVERGENCE_THRESHOLD=0.2
CONVERGENCE_ROUNDS=2
CONTEXT_SIZE_WARNING=15000
CONTEXT_SIZE_LIMIT=20000

# Compression Configuration
COMPRESSION_SIMILARITY_THRESHOLD=0.85
COMPRESSION_MIN_SUPPORT=2
LAZY_COMPRESSION_THRESHOLD=10000

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=100
